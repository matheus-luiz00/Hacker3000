<Window x:Class="WpfAppEntity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:y="clr-namespace:WpfAppEntity.Views"
        xmlns:local="clr-namespace:WpfAppEntity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <y:ucLogin x:Name="ucLoginForm" success="UcLogin_success" fail="UcLogin_fail">
            <y:ucLogin.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFFF0093" Offset="1"/>
                    <GradientStop Color="#FFFF90E4"/>
                    <GradientStop Color="#FFE343FF" Offset="0.552"/>
                </LinearGradientBrush>
            </y:ucLogin.Background>
        </y:ucLogin>
        <y:ucGridView x:Name="ucGridView" Visibility="Hidden"></y:ucGridView>
    </Grid>
</Window>
