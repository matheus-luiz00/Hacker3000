<UserControl x:Class="WpfAppEntity.Views.ucLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppEntity.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Button Content="Login" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="285,239,0,0" VerticalAlignment="Top" Width="231" Height="47" Click="Button_Click"/>
        <TextBox x:Name="tbxLogin" FontSize="32" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Height="45" Margin="285,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" RenderTransformOrigin="0.177,0.67"/>

        <Label Content="Login:" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="207,112,0,0" VerticalAlignment="Top" Width="73"/>
        <Label Content="Senha:" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="207,185,0,0" VerticalAlignment="Top" Width="73"/>
        <PasswordBox  x:Name="tbxSenha" FontSize="32" FontFamily="Comic Sans MS" HorizontalAlignment="Left" Margin="285,172,0,0" VerticalAlignment="Top" Width="231" Height="41"/>

    </Grid>
</UserControl>
